# Database Configuration
DATABASE_URL=postgresql://nova_user:nova_password@localhost:5432/nova_pasta
POSTGRES_DB=nova_pasta
POSTGRES_USER=nova_user
POSTGRES_PASSWORD=nova_password

# Redis Configuration
REDIS_URL=redis://:nova_redis_password@localhost:6379/0
REDIS_PASSWORD=nova_redis_password

# RabbitMQ Configuration
RABBITMQ_URL=amqp://nova_user:nova_password@localhost:5672/nova_pasta
CELERY_BROKER_URL=amqp://nova_user:nova_password@localhost:5672/nova_pasta
CELERY_RESULT_BACKEND=redis://:nova_redis_password@localhost:6379/0

# JWT Configuration
SECRET_KEY=nova_pasta_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_GITHUB_CLIENT_ID=your_github_client_id
REACT_APP_GITLAB_CLIENT_ID=your_gitlab_client_id

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Storage
STORAGE_TYPE=local  # local, s3, azure
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=nova-pasta-uploads

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=true
ENVIRONMENT=development
